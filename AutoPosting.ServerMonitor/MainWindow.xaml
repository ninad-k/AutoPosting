<Window x:Class="AutoPosting.ServerMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoPosting.ServerMonitor"
        mc:Ignorable="d"
        Title="Server Monitor" Height="600" Width="900"
        Background="#F0F2F5"
        FontFamily="Segoe UI">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Accounts List -->
        <Border Grid.Column="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Accounts" FontSize="20" FontWeight="Bold" Margin="15,15,15,10"/>

                <ListBox Grid.Row="1" ItemsSource="{Binding Accounts}" SelectedItem="{Binding SelectedAccount}" 
                         BorderThickness="0" Background="Transparent" Padding="5">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="Margin" Value="0,0,0,5"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#E6F2FF"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F5F5F5"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Ellipse Grid.Column="0" Width="10" Height="10" Margin="0,0,10,0" VerticalAlignment="Center">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Active">
                                                    <Setter Property="Fill" Value="Green"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Offline">
                                                    <Setter Property="Fill" Value="Red"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Syncing">
                                                    <Setter Property="Fill" Value="Orange"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Sending...">
                                                    <Setter Property="Fill" Value="Blue"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Capturing...">
                                                    <Setter Property="Fill" Value="Purple"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Error">
                                                    <Setter Property="Fill" Value="DarkRed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="14"/>
                                    <TextBlock Text="{Binding Details}" FontSize="12" Foreground="Gray" TextTrimming="CharacterEllipsis"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                        <TextBlock Text="Sent: " FontSize="11" Foreground="#0078D7"/>
                                        <TextBlock Text="{Binding MessagesSentCount}" FontSize="11" FontWeight="Bold" Foreground="#0078D7"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- Right Panel: Details -->
        <Grid Grid.Column="1" Background="#F0F2F5">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding SelectedAccount}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="White" Padding="20" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                <StackPanel>
                    <TextBlock Text="{Binding SelectedAccount.Name}" FontSize="24" FontWeight="Bold"/>
                    <TextBlock Text="{Binding SelectedAccount.Type}" FontSize="14" Foreground="Gray"/>
                </StackPanel>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" Padding="20">
                <StackPanel>
                    <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Status Information" FontWeight="Bold" Margin="0,0,0,10"/>
                            <Grid Margin="0,0,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Current Status:" Foreground="Gray"/>
                                <TextBlock Grid.Column="1" Text="{Binding SelectedAccount.Status}" FontWeight="SemiBold"/>
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Last Sync:" Foreground="Gray"/>
                                <TextBlock Grid.Column="1" Text="{Binding SelectedAccount.LastSync}" FontWeight="SemiBold"/>
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Next Run:" Foreground="Gray"/>
                                <TextBlock Grid.Column="1" Text="{Binding SelectedAccount.NextRunTime}" FontWeight="SemiBold"/>
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Msgs Sent:" Foreground="Gray"/>
                                <TextBlock Grid.Column="1" Text="{Binding SelectedAccount.MessagesSentCount}" FontWeight="SemiBold" Foreground="#0078D7"/>
                            </Grid>
                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Schedule:" Foreground="Gray" VerticalAlignment="Center"/>
                                <CheckBox Grid.Column="1" IsChecked="{Binding SelectedAccount.IsScheduleEnabled}" Content="Enable Auto-Send" VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Placeholder for logs/actions -->
                    <Border Background="White" CornerRadius="8" Padding="15">
                        <StackPanel>
                            <TextBlock Text="Quick Actions" FontWeight="Bold" Margin="0,0,0,10"/>
                            <WrapPanel>
                                <Button Content="Send Image Now" Padding="10,5" Margin="0,0,10,0" Click="SendImageNow_Click"/>
                                <Button Content="View Logs" Padding="10,5" Margin="0,0,10,0"/>
                                <Button Content="Edit Configuration" Padding="10,5"/>
                            </WrapPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        
        <!-- Empty State -->
         <Grid Grid.Column="1">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding SelectedAccount}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <TextBlock Text="Select an account to view details" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" 
                       FontSize="16" Foreground="Gray"/>
        </Grid>

    </Grid>
</Window>
